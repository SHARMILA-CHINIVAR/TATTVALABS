from flask import Flask,render_template,request
import pandas as pd
app=Flask(__name__)


@app.route("/")
def ii():
    return render_template("s-index.html")

@app.route("/signup",methods=['GET','POST'])
def signup():
    name=request.form.get('name')
    email=request.form.get('email')
    username=request.form.get('username')
    passwd=request.form.get('passwd')
    repasswd=request.form.get('repasswd')

    if passwd==repasswd:
        df=pd.DataFrame({'name':[name],'email':[email],'username':[username],'password':[passwd],'repeat-password':[repasswd]})
        df.to_csv('resu.csv')
        return render_template('l-index.html')
    else:
        return "Invalid signup"

@app.route("/login",methods=['GET','POST'])
def login():
    d=pd.read_csv('resu.csv')
    unm=request.form.get('username')
    passwd=request.form.get('passwd')
    print(unm,passwd)
    print(d)
    n = len(d)
    for i in range(0, n):
        if unm == d.iloc[i]['username'] and passwd == str(d.iloc[i]['password']):
            return render_template('home.html')
    return "Invalid login entry"


if __name__=="__main__":
    app.run()
    
    
